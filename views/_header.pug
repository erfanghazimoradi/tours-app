header.header 
  nav.nav.nav--tours 
    a.nav__el(href='/tours') Tours
    form.nav__search
      button.nav__search-btn
        svg 
          use(xlink:href='/img/icons.svg#icon-search')
      input.nav__search-input(type='text', placeholder='Search tours')
  .header__logo 
    img(src='/img/logo-white.png', alt='tours app logo')
  .nav.nav--user 
    if user
      button.nav__el.nav__el--logout Log out 
      a.nav__el(href='/account/settings') 
        img.nav__user-img(src=`/img/users/${user.avatar}`, alt='user photo')
        span= user.firstname 
    else
      a.nav__el.nav__el--login(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up
