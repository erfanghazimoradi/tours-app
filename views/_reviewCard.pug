mixin reviewCard(review)
  .reviews__card
    .reviews__avatar
      img.reviews__avatar-img(src=`/img/users/${review.user.avatar}`, alt='Jim Brown')
      h6.reviews__user= `${review.user.firstname} ${review.user.lastname}`
    p.reviews__text= review.review
    .reviews__rating
      each star in [1,2,3,4,5]
        - const starStatus = star <= review.rating ? 'active' : 'inactive';
          svg.reviews__star(class=`reviews__star--${starStatus}`)
            use(xlink:href='/img/icons.svg#icon-star')